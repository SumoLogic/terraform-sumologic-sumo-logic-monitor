{
  "name": "PostgreSQL",
  "description": "Folder for PostgreSQL Monitors",
  "type": "MonitorsLibraryFolderExport",
  "children": [
    {
      "name": "PostgreSQL - Access from Highly Malicious Sources",
      "description": "This alert will fire when a Postgres instance is accessed from known malicious IP addresses.",
      "type": "MonitorsLibraryMonitorExport",
      "monitorType": "Logs",
      "evaluationDelay": "0m",
      "alertName": null,
      "runAs": null,
      "notificationGroupFields": [],
      "queries": [
        {
          "rowId": "A",
          "query": "db_system=postgresql db_cluster=* connection\n| json \"log\" as _rawlog nodrop\n| if (isEmpty(_rawlog), _raw, _rawlog) as _raw\n| parse \"connection received: host=* port=*\" as ip,port\n| count by ip,  db_cluster\n| threatlookup singleIndicator ip\n| where (_threatlookup.type=\"ipv4-addr:value\" or _threatlookup.type=\"ipv6-addr:value\") and !isNull(_threatlookup.confidence)\n| if (_threatlookup.confidence >= 85, \"high\", if (_threatlookup.confidence >= 50, \"medium\", if (_threatlookup.confidence >= 15, \"low\", if (_threatlookup.confidence >= 0, \"unverified\", \"Unknown\")))) as malicious_confidence\n| if (isEmpty(_threatlookup.actors), \"Unassigned\", _threatlookup.actors) as Actor\n| count by  db_cluster, ip, Actor, malicious_confidence"
        }
      ],
      "triggers": [
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "Critical",
          "resolutionWindow": null,
          "timeRange": "-5m",
          "threshold": 1,
          "thresholdType": "GreaterThanOrEqual",
          "field": null,
          "occurrenceType": "ResultCount",
          "triggerSource": "AllResults",
          "minDataPoints": null
        },
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "ResolvedCritical",
          "resolutionWindow": null,
          "timeRange": "-5m",
          "threshold": 1,
          "thresholdType": "LessThan",
          "field": null,
          "occurrenceType": "MissingData",
          "triggerSource": "AllResults",
          "minDataPoints": null
        }
      ],
      "timeZone": null,
      "notifications": [],
      "isDisabled": false,
      "groupNotifications": true,
      "playbook": "",
      "sloId": null,
      "monitorTemplateId": null,
      "tags": null,
      "automatedPlaybookIds": []
    },
    {
      "name": "Postgresql - Too Many Locks Acquired",
      "description": "This alert fires when we detect that there are too many locks acquired on the database. If this alert happens frequently, you may need to increase the postgres setting max_locks_per_transaction.",
      "type": "MonitorsLibraryMonitorExport",
      "monitorType": "Metrics",
      "queries": [
        {
          "rowId": "A",
          "query": " metric=postgresql_num_locks db_system=postgresql db_cluster=*  host=*  db=* mode=*| sum by  db_cluster, host, db | eval(_value / 100*64)"
        }
      ],
      "triggers": [
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "Critical",
          "timeRange": "-5m",
          "threshold": 0.2,
          "thresholdType": "GreaterThanOrEqual",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        },
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "ResolvedCritical",
          "timeRange": "-5m",
          "threshold": 0.2,
          "thresholdType": "LessThan",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        }
      ],
      "notifications": [],
      "isDisabled": false,
      "groupNotifications": true
    },
    {
      "name": "Postgresql- Too Many Connections",
      "description": "PostgreSQL instance has too many connections)",
      "type": "MonitorsLibraryMonitorExport",
      "monitorType": "Metrics",
      "queries": [
        {
          "rowId": "A",
          "query": " metric=postgresql_numbackends db_system=postgresql db_cluster=*  host=* "
        }
      ],
      "triggers": [
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "Critical",
          "timeRange": "-5m",
          "threshold": 90,
          "thresholdType": "GreaterThanOrEqual",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        },
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "ResolvedCritical",
          "timeRange": "-5m",
          "threshold": 90,
          "thresholdType": "LessThan",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        }
      ],
      "notifications": [],
      "isDisabled": false,
      "groupNotifications": true
    },
    {
      "name": "Postgresql- Commit Rate Low",
      "description": "This alert fires when we detect that Postgres seems to be processing very few transactions.",
      "type": "MonitorsLibraryMonitorExport",
      "monitorType": "Metrics",
      "queries": [
        {
          "rowId": "A",
          "query": " metric=postgresql_xact_commit db_system=postgresql db_cluster=* db=* host=* | quantize using sum | sum by db_cluster,db,host | rate"
        }
      ],
      "triggers": [
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "Critical",
          "timeRange": "-5m",
          "threshold": 10,
          "thresholdType": "LessThan",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        },
        {
          "detectionMethod": "StaticCondition",
          "triggerType": "ResolvedCritical",
          "timeRange": "-5m",
          "threshold": 10,
          "thresholdType": "GreaterThanOrEqual",
          "occurrenceType": "Always",
          "triggerSource": "AnyTimeSeries"
        }
      ],
      "notifications": [],
      "isDisabled": false,
      "groupNotifications": true
    },
    {
      "name": "PostgreSQL - High Replication Lag",
